meta {
  name: Register New Parent
  type: http
  seq: 5
}

post {
  url: {{baseUrl}}/auth/register
  body: json
  auth: none
}

script:pre-request {
  const timestamp = Date.now();
  const username = `parent.carlos.${timestamp}`;
  const email = `carlos.benitez.${timestamp}@example.com`;

  bru.setVar("testParentUsername", username);
  bru.setVar("testParentEmail", email);
}

body:json {
  {
    "username": "{{testParentUsername}}",
    "password": "Parent123!",
    "firstName": "Carlos",
    "lastName": "Benitez",
    "email": "{{testParentEmail}}",
    "role": "PARENT"
  }
}

tests {
  test("should return 201 status", function() {
    expect(res.getStatus()).to.equal(201);
  });

  test("should return token", function() {
    const data = res.getBody();
    expect(data).to.have.property("token");
  });

  test("should return user with PARENT role", function() {
    const data = res.getBody();
    expect(data.role).to.equal("PARENT");
    expect(data.firstName).to.equal("Carlos");
    expect(data.username).to.include("parent.carlos.");
  });
}
