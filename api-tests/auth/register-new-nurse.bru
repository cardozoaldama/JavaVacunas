meta {
  name: Register New Nurse
  type: http
  seq: 4
}

post {
  url: {{baseUrl}}/auth/register
  body: json
  auth: none
}

script:pre-request {
  const timestamp = Date.now();
  const username = `nurse.maria.${timestamp}`;
  const email = `maria.gonzalez.${timestamp}@mspbs.gov.py`;
  const licenseNumber = `NUR-2024-${timestamp}`;

  bru.setVar("testNurseUsername", username);
  bru.setVar("testNurseEmail", email);
  bru.setVar("testNurseLicense", licenseNumber);
}

body:json {
  {
    "username": "{{testNurseUsername}}",
    "password": "Nurse123!",
    "firstName": "Maria",
    "lastName": "Gonzalez",
    "email": "{{testNurseEmail}}",
    "role": "NURSE",
    "licenseNumber": "{{testNurseLicense}}"
  }
}

tests {
  test("should return 201 status", function() {
    expect(res.getStatus()).to.equal(201);
  });

  test("should return token", function() {
    const data = res.getBody();
    expect(data).to.have.property("token");
  });

  test("should return user with NURSE role", function() {
    const data = res.getBody();
    expect(data.role).to.equal("NURSE");
    expect(data.firstName).to.equal("Maria");
    expect(data.username).to.include("nurse.maria.");
  });
}
