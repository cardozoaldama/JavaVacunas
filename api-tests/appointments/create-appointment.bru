meta {
  name: Create New Appointment
  type: http
  seq: 1
}

script:pre-request {
  const futureDate = new Date();
  futureDate.setDate(futureDate.getDate() + 30);
  const isoDate = futureDate.toISOString().slice(0, 19);
  bru.setVar("appointmentDateTime", isoDate);
}

post {
  url: {{baseUrl}}/appointments?childId={{testChildId}}&appointmentDate={{appointmentDateTime}}&appointmentType=SCHEDULED&scheduledVaccines=BCG,Hepatitis B&notes=Primera visita
  body: none
  auth: bearer
}

auth:bearer {
  token: {{doctorToken}}
}

tests {
  test("should return 201 status", function() {
    expect(res.getStatus()).to.equal(201);
  });

  test("should return created appointment", function() {
    const data = res.getBody();
    expect(data).to.have.property("id");
    expect(data).to.have.property("appointmentType");
  });
}

script:post-response {
  if (res.getStatus() === 201) {
    const data = res.getBody();
    bru.setEnvVar("testAppointmentId", data.id);
  }
}
