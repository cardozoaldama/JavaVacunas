meta {
  name: Create New Appointment
  type: http
  seq: 1
}

post {
  url: {{baseUrl}}/appointments?childId={{testChildId}}&appointmentDate=2025-12-10T09:00:00&appointmentType=SCHEDULED&scheduledVaccines=BCG,Hepatitis B&notes=Primera visita
  body: none
  auth: bearer
}

auth:bearer {
  token: {{doctorToken}}
}

tests {
  test("should return 201 status", function() {
    expect(res.getStatus()).to.equal(201);
  });

  test("should return created appointment", function() {
    const data = res.getBody();
    expect(data).to.have.property("id");
    expect(data).to.have.property("appointmentType");
  });
}

script:post-response {
  if (res.getStatus() === 201) {
    const data = res.getBody();
    bru.setEnvVar("testAppointmentId", data.id);
  }
}
