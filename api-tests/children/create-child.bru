meta {
  name: Create New Child
  type: http
  seq: 1
}

post {
  url: {{baseUrl}}/children
  body: json
  auth: bearer
}

auth:bearer {
  token: {{doctorToken}}
}

body:json {
  {
    "firstName": "Juan",
    "lastName": "Perez",
    "documentNumber": "{{documentNumber}}",
    "dateOfBirth": "2024-01-15",
    "gender": "MALE",
    "bloodType": "O+",
    "birthWeight": 3.5,
    "birthHeight": 50.5
  }
}

script:pre-request {
  // Generate dynamic document number to avoid conflicts
  const timestamp = Date.now().toString().slice(-7);
  bru.setVar("documentNumber", timestamp);
}

tests {
  test("should return 201 status", function() {
    expect(res.getStatus()).to.equal(201);
  });

  test("should return created child", function() {
    const data = res.getBody();
    expect(data).to.have.property("id");
    expect(data.firstName).to.equal("Juan");
    expect(data.documentNumber).to.equal(bru.getVar("documentNumber"));
  });
}

script:post-response {
  if (res.getStatus() === 201) {
    const data = res.getBody();
    bru.setEnvVar("testChildId", data.id);
  }
}
